<button>Initial Text</button>

<head lang="en">
    <meta charset="UTF-8">
    <script src="https://ak.sail-horizon.com/spm/spm.v1.min.js"></script>
    <script>Sailthru.init({ customerId: '67007a2e356a88b974c4e3e894a18c71' });</script>
</head>

<script>
const button = document.querySelector("button");
let count = 0;
let state = {
  buttonText: ""
};
// Change the look of your app based on state
function render() {
  button.innerText = state.buttonText;
}

// Update state, history, and user interface
function handleButtonClick() {
  state.buttonText = "Click count = " + count
  render(state);
  Sailthru.init({ customerId: '67007a2e356a88b974c4e3e894a18c71' })
  count++
}
// Connect your button to the handler above to trigger on click
button.addEventListener("click", handleButtonClick);

/* End JavaScript */
</script>
